@using CarShop.Models.ViewModels;
@model ZapViewModel

@{
    ViewData["Title"] = Model.CarZapItem.Nazvanie;
}


<div class="text-center d-flex justify-content-center">
    <h1>
        @Model.CarZapItem.Nazvanie / @Model.CarZapItemCategory.CatName
    </h1>
</div>

<img class="d-block w-100" src="@Model.CarZapItem.ImgLink" alt="Первый слайд" style="max-height: 300px; object-fit: contain;">

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Название</th>
            <th scope="col">Категория</th>
            <th scope="col">Стоимость</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">@Model.CarZapItem.IdCarZap</th>
            <td>@Model.CarZapItem.Nazvanie</td>
            <td>@Model.CarZapItemCategory.CatName</td>
            <td>@Model.CarZapItem.Cena Р.</td>
        </tr>
    </tbody>
</table>
<a href="/Buy/Index?id=@Model.CarZapItem.IdCarZap">Добавить в корзину</a>
