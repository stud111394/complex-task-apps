@using CarShop.Models.ViewModels;
@model RegisterViewModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Name">Введите имя</label><br />
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="LastName">Введите фамилию</label><br />
            <input type="text" asp-for="LastName" />
            <span asp-validation-for="LastName" />
        </div>
        <div>
            <label asp-for="ThirdName">Введите отчество</label><br />
            <input asp-for="ThirdName" />
            <span asp-validation-for="ThirdName" />
        </div>
        <div>
            <label asp-for="Phone">Введите телефон</label><br />
            <input asp-for="Phone" />
            <span asp-validation-for="Phone" />
        </div>

        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>
